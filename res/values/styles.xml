<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
<!--         <item name="textStyle">@style/text_style</item> -->
<!--         <item name="backgroundStyle">@style/background_style</item> -->
    </style>

    <style name="text_style">
        <item name="android:textColor">@android:color/black</item>
    </style>
    
	<style name="background_style">
	    <item name="android:background">@android:color/background_dark</item>
	</style>   
	
	
	
	
	<!-- Application theme. -->
    <style name="AppThemeLight" parent="AppBaseTheme">
<!--         <item name="textStyle">@style/text_light_style</item> -->
<!--         <item name="backgroundStyle">@style/background_light_style</item> -->
    </style>

    <style name="text_light_style">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
	<style name="background_light_style">
	    <item name="android:background">@android:color/background_light</item>
	</style>   
</resources>
